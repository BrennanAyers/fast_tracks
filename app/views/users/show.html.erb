<h1> <%= facade.user_name %> </h1>
<h2>Welcome to Fast Tracks</h2>

<% if current_user.spotify_token.nil? %>
	<%= link_to "Connect to Spotify",	facade.build_link, id: "spot-conn-link" %>
<% end %>


<% if current_user.spotify_token.nil? %>
	<%= link_to "Connect to Spotify",	facade.build_link %>
<% end %>

<%= button_to "Sync My Strava Data", stravas_path %>

<section class="top-songs">
  <% facade.top_songs.each do |song| %>
    <div class="song">
      <ul>
        <li class="song-power-index"><%= song.power_ranking %></li>
        <li class="song-title"><a href="<%= song_path(song.id) %>"><%= song.title %></a></li>
        <li class="song-artist"><%= song.artist %></li>
        <li class="song-play-count"><%= song.play_count %></li>
        <li class="song-last-played"><%= song.updated_at %></li>
      </ul>
    </div>
  <% end %>
</section>

<% if facade.top_songs.length > 4 %>
  <section class="recommended-songs">
    <h3>Recommended Songs</h3>
    <% facade.recommended_songs.each do |song| %>
      <div class="song">
        <iframe src="https://open.spotify.com/embed/track/<%= song[:spotify_id] %>" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
      </div>
    <% end %>
  </section>
<% end %>